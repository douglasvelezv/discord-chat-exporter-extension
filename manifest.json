{
  "manifest_version": 3,
  "name": "Discord Chat Exporter",
  "version": "1.0.0",
  "description": "Exporta todos los mensajes de un canal de Discord",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://discord.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Discord Chat Exporter"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ]
}
